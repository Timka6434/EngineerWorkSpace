<Window x:Class="EngineerWorkSplace.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10,0,0,0" Height="164" VerticalAlignment="Center" HorizontalAlignment="Left" Width="380">
            <TextBlock Text="Укажите путь к папке с электронными подписями:" Margin="0,0,0,10"/>
            <TextBox x:Name="PathTextBox" Margin="0,0,0,10"/>
            <Button Content="Обзор..." Click="BrowseButton_Click" Margin="0,0,0,10"/>
            <Button Content="Сохранить" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
